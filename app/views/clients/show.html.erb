<% if user_signed_in? %>
	<h1><%= @client.full_name %></h1>
	<h3>Contact Info</h3>
	<h4><%= @client.address.titleize %></h4>
	<h4>Home Phone: <%= @client.home_phone %></h4>
	<h4>Cell Phone: <%= @client.cell_phone %></h4>

	<h3>Demographics:</h3>
	<h4>Race: <%= best_in_place @client, :race%></h4>
	<h4>Sex: <%= best_in_place @client, :sex %></h4>

	<%= form_tag case_assign_path, method: :post do %>
		<div class = "field">
			<%= collection_select(:program_employee, :user_id, User.all, :id, :full_name, {:prompt => 'Select a Counselor'}) %>
 		</div>
 		<% if !@client.foreclosure.blank? %>
 			<%= hidden_field_tag :programable_id, @client.foreclosure.id %>
 			<%= hidden_field_tag :programable_type, "Foreclosures" %>
		<% elsif !@client.homebuying.blank? %>
 			<%= hidden_field_tag :programable_id, @client.homebuying.id %>
 			<%= hidden_field_tag :programable_type, "Homebuyings" %> 			
		<% elsif !@client.rental.blank? %>
 			<%= hidden_field_tag :programable_id, @client.rental.id %>
 			<%= hidden_field_tag :programable_type, "Rentals" %>
		<% elsif !@client.senior_repair.blank? %>
 			<%= hidden_field_tag :programable_id, @client.senior_repair.id %>
 			<%= hidden_field_tag :programable_type, "SeniorRepairs" %>
		<% elsif !@client.law_project.blank? %>
 			<%= hidden_field_tag :programable_id, @client.law_project.id %>
 			<%= hidden_field_tag :programable_type, "LawProjects" %>
		<% end %>
 		<%= submit_tag "Assign" %>

	<% end %>

<% elsif client_signed_in? %>
	<h1>Hi <%= current_client.full_name %></h1>
	<h4>First Name: <%= best_in_place @client, :first_name %></h4>
	<h4>Last Name: <%= best_in_place @client, :last_name%></h4>
	<h4>Email: <%= best_in_place @client, :email %></h4>
	<h4>Race: <%= best_in_place @client, :race %></h4>
	<h4>Sex: <%= best_in_place @client, :sex %></h4>
  <h4>Date of Birth: <%= best_in_place @client, :dob, :as => :date %></h4>
  <h4>Social Security Number <%= best_in_place @client, :ssn %></h4>
	<h4>Home Phone: <%= best_in_place @client, :home_phone %></h4>
	<h4>Cell Phone: <%= best_in_place @client, :cell_phone %></h4>
	<h4>Work Phone: <%= best_in_place @client, :work_phone %></h4>
	<h4>Address: <%= best_in_place @client, :address %></h4>
	<h4>City: <%= best_in_place @client, :city %>, State: <%= best_in_place @client, :state, :as => :select, :class=>"best_in_place", :collection => us_states %></h4>
  <h4>Zip Code: <%= best_in_place @client, :zip_code %>, Ward: <%= best_in_place @client, :ward %></h4>
  <h4>Preferred Contact Method: <%= best_in_place @client, :preferred_contact_method %></h4>
  <h4>Preferred Language: <%= best_in_place @client, :preferred_language, :as => :select, :class=>"best_in_place", :collection => income_range %></h4>
  <h4>Number in Household: <%= best_in_place @client, :num_in_household %></h4>
  <h4>    <%= best_in_place @client, :num_of_dependants %></h4>
