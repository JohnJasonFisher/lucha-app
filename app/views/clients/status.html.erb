<h1>Hi <%= current_client.full_name %></h1>

<% if !current_client.foreclosures.blank? %>
	<h3>Your counselor is <%=current_client.foreclosures[0].program_employees[0].user.full_name%>
	<ul>
		<li>Phone: <%=current_client.foreclosures[0].program_employees[0].user.work_phone%></li>
		<li>Email: <%=current_client.foreclosures[0].program_employees[0].user.email%></li>

		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="70"
		  aria-valuemin="0" aria-valuemax="<%= current_client %>" style="width:70%">
		    70%
		</div>
		</div>



	</ul>

<% elsif !current_client.homebuyings.blank? %>
	<h3>Your counselor is <%=current_client.homebuyings[0].program_employees[0].user.full_name%>

<% elsif !current_client.rentals.blank? %>
	<h3>Your counselor is <%=current_client.rentals[0].program_employees[0].user.full_name%>

<% elsif !current_client.senior_repairs.blank? %>
	<h3>Your counselor is <%=current_client.senior_repairs[0].program_employees[0].user.full_name%>

