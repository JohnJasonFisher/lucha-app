	<tr>
		<td>Property Taxes:</td>
		<td><input type="text" ng-model="debt.prop_tax"></td>
	</tr>
	<tr>
		<td>Association Fees:</td>
		<td><input type="text" ng-model="debt.assoc_fees"></td>
	</tr>
	<tr>
		<td>Junior Mortgage:</td>
		<td><input type="text" ng-model="debt.junior_mortgage"></td>
