	<tr>
		<td>Gas</td>
		<td><input type="text" ng-model="debt.gas"></td>
	</tr>
	<tr>
		<td>Electricity</td>
		<td><input type="text" ng-model="debt.electricity"></td>
	</tr>
	<tr>
		<td>Water</td>
		<td><input type="text" ng-model="debt.water"></td>
	</tr>
	<tr>
		<td>Phone</td>
		<td><input type="text" ng-model="debt.phone"></td>
	</tr>
	<tr>
		<td>Other Utilities</td>
		<td><input type="text" ng-model="debt.other_utilities"></td>
	</tr>
	<tr>
		<td>Food/Groceries</td>
		<td><input type="text" ng-model="debt.food"></td>
	</tr>
	<tr>
		<td>Gas and car maintenance</td>
		<td><input type="text" ng-model="debt.gas_car_maintenance"></td>
	</tr>
	<tr>
		<td>Child Care</td>
