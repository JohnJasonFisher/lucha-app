<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>LUCHA</title>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/">
                        LUCHA Home
                    </a>
                </li>




<!-- Make a nav bar for users-->

                <% if user_signed_in? %>
                    <li>
                        <a href="/users"><%= current_user.email %></a>
                    </li>
                    <li>
                       <%= link_to 'Foreclosures', foreclosures_path %>
                    </li>
                    <li>
                        <%= link_to 'Home Buying', homebuyings_path %>
                    </li>
                    <li>
                        <%= link_to 'Law Projects', law_projects_path %>
                    </li>
                    <li>
                        <%= link_to 'Rentals', rentals_path %>
                    </li>
                    <li>
                        <%= link_to 'Senior Repairs', senior_repairs_path %>
                    </li>
                    <li>
                        <%= link_to 'Clients', clients_path %>
                    </li>
                    <li>
                        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
                    </li>


                    <li><%= form_tag "/search", class: "navbar-form navbar-right" do %>
                    <%= text_field_tag :search, nil, placeholder: "Search Clients" %>
                    <%= submit_tag "Go" %>
                    <% end %>
                    </li>



<!--Make an elsif for clients to have their own bar -->
                <% elsif client_signed_in? %>
                    <li>
                    <%=link_to 'Status', client_status_path(current_client.id) %>
                    </li>
                    <li>
                        <%= link_to 'Edit your personal info', client_edit_path(current_client.id) %> 
                    </li>
                    <li>
                    <% if current_client.foreclosures.blank? %>
                        <%= link_to 'Foreclosures', foreclosure_intake_path %>
                    <% else %>
                        <%= link_to 'Edit Your Foreclosure App', foreclosure_edit_path(current_client.foreclosures[0].id) %>
                    <% end %>
                    </li>
                    <li>
                        <%= link_to 'Home Buying', homebuying_intake_path %>
                    </li>
                    <li>
                        <%= link_to 'Law Projects', law_project_intake_path %>
                    </li>
                    <li>
                        <%= link_to 'Rentals', rental_intake_path %>
                    </li>
                    <li>
                        <%= link_to 'Senior Repairs', senior_repair_intake_path %>
                    </li>
                      <li>
                          <%= link_to('Logout', destroy_client_session_path, :method => :delete) %>        
                      </li>
                <% else %>
                    <li>
                        <a href="/register">Client Registration</a>
                    </li>
                    <li>
                        <a href="/users/sign_up">Users Registration</a>
                    </li>
    				<li>
					  <%= link_to('Employee login', new_user_session_path)  %>  
    				</li>
                    <li>
                      <%= link_to('Client login', new_client_session_path)  %>  
                    </li>
				<% end %>

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
										
                                        <% flash.each do |name, message| %>
                                            <div class="alert alert-<%= name == "alrert" || name == "notice" ? "warning" : name %> alert-dismissible" role="alert">  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <p> <%= message %> </p> </div>
                                        <% end %>


											<%= yield %>
                    
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>
